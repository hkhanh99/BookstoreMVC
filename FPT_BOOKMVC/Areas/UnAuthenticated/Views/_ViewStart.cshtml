@{
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        Layout = "_LayoutAdmin";
    }
    else if (User.Identity.IsAuthenticated && User.IsInRole("StoreOwner"))
    {
        Layout = "_Layout2";
    }
    else if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
    {
        Layout = "_Layout3";
    }
    else
    {
        Layout = "_Layout";
		<!-- slider -->
		<slider>
			<container-slider>
				<div id="carouselExampleDark" class="carousel carousel-dark slide w-50 mx-auto" style="margin-top: 50px;">
					<div class="carousel-indicators">
						<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
						<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
						<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
					</div>
					<div class="carousel-inner">
						<div class="carousel-item active" data-bs-interval="10000">
							<img src="/Images/homepagebook1.png" class="d-block w-100" alt="image-home" >

						</div>
						<div class="carousel-item" data-bs-interval="2000">
                            <img src="~/Images/homepagebook2.png" class="d-block w-100" alt="image-home">

						</div>
						<div class="carousel-item">
                            <img src="~/Images/sliderbook.jpg" class="d-block w-100" alt="image-home">

						</div>
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
			</container-slider>
		</slider>
		<!-- content -->
		<content>
            <div class="w3-container w3-content w3-center w3-padding-64"  id="band">
                <h2 class="w3-wide">Role Of The Book</h2>
                <p class="w3-opacity"><i>We love read book</i></p>
                <p class="w3-justify">
                    Books are an invaluable source of knowledge. We can learn and cultivate knowledge from books, thereby developing ourselves and contributing to society. Books not only help us increase our knowledge and expand our horizons, but also help us develop writing and thinking skills.
                    However, books also have limitations. Some books can be overly persuasive, negatively affecting readers' thinking. Sometimes, some works also contain content that is inconsistent with the moral and cultural values of society
                    To evaluate a good book, pay attention to its content. Books must be educational, convey correct information and have practical application. At the same time, books must also have high literary and aesthetic value, demonstrating the author's art of writing and creativity.
                    In addition, the origin and printing quality of the book also deserve attention. Books must be produced according to standards, printed beautifully and sustainably to ensure readers can use them for a long time.
                    Thus, books are an invaluable human asset, helping us increase our knowledge and develop ourselves.
                </p>
                <div class="w3-row w3-padding-32" id="role-content">
                    <div class="w3-third">
                        <p>Name</p>
                        <img src="~/Images/bandbook.png" class="w3-round w3-margin-bottom" alt="Random Name" style="width:60%">
                    </div>
                    <div class="w3-third">
                        <p>Name</p>
                        <img src="~/Images/bandbook2.png" class="w3-round w3-margin-bottom" alt="Random Name" style="width:60%">
                    </div>
                    <div class="w3-third">
                        <p>Name</p>
                        <img src="~/Images/bandbook3.png" class="w3-round" alt="Random Name" style="width:60%">
                    </div>
                </div>
            </div>
		</content>
        <img src="~/Images/footer.jpg" class="footer-home"  />
        <!-- footer -->
        
      

    }
}
