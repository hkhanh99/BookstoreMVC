@model List<FPT_BOOKMVC.Models.OrderDetail>
@{
	Layout = "_Layout2";
}
<h1>Customer Ordered</h1>
<table class="table">
	<thead>
		<tr>
			<th>OrderId</th>
			<th>Customer Name</th>
			<th>OrderDetailId</th>
			<th>Book Name</th>
			<th>Ordered Quantity</th>
			<th>Total Price</th>

		</tr>
	</thead>
	
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Order.OrderId</td>
				<td>@item.Order.User.Name</td>
				<td>@item.OrderDetailId</td>
				<td>@item.Book.Name</td>
				<td>@item.Quantity</td>
				<td>@item.Total</td>
			</tr>
			// total_cart += item.Total;
		}


	</tbody>
</table>
<script>
	$('.js-order').each(function () {
		var nameProduct = $(this).parent().parent().parent().parent().html();
		$(this).on('click', function () {
			swal("Successfully!", "You will receive your order after 4 days!", "success");
		});
	});
</script>
<button class="btn btn-primary" onclick="clickcheckout" id="checkout" asp-controller="Order" asp-action="DeleteAllOrders">CheckOut</button>
